@model IEnumerable<HoangHung_ERP_System.ViewModels.HRWorldDisplayViewModel>
@{
    ViewBag.Title = "Quản lý hồ sơ";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý hồ sơ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            @Html.ActionLink("Thêm hồ sơ", "Create")
        </p>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách ứng viên
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th> @Html.DisplayNameFor(model => model.NameUngVien)</th>
                                <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>Trident</td>
                                    <td> @Html.DisplayFor(modelItem => item.NameUngVien)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                    <td class="center">4</td>
                                    <td class="center">X</td>
                                </tr>
                            }
                            </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


